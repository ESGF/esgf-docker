readonly FALSE='false'
readonly TRUE='true'

### Return codes

readonly SUCCESS_CODE=0
readonly SETTINGS_ERROR=1
readonly CANCEL_CODE=2

readonly DEFAULT_IMAGES_HUB=${ESGF_IMAGES_HUB-esgfhub}
