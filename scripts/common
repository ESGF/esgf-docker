readonly ESGF_IMAGE_DIR_NAMES=('node' 'postgres' 'tomcat' 'solr' 'httpd' 'cog' 'data-node' 'idp-node' 'index-node' 'slcs' 'node-manager' 'vsftp' 'solr-cloud')

readonly ESGF_IMAGE_PREFIX='esgf-'

################################ FUNCTIONS #####################################

# return 0 if user answer yes, return 1 otherwise.
function ask_binary_question
{
  while true
  do
    echo -n "${1} (y[es]/n[o]): "
    read reply
  
    case $(echo $reply | tr '[A-Z]' '[a-z]') in
      y|yes)
        return 0
        ;;
      n|no)
        return 1
        ;;
      *) echo "just y[es] or n[o] !"
         ;;  
    esac
  done
}